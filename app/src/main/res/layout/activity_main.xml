<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvAppTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="16dp"
        android:text="My Calulator"
        android:textColor="#fff"
        android:textSize="32sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvOperation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="16dp"
        android:textColor="#fff"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etCalculator"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/tvOperation"
        android:text="0"
        android:textSize="48sp"
        android:layout_marginBottom="16dp"
        android:textStyle="bold"
        android:gravity="end|center_vertical"
        android:background="@drawable/style_edittext"
        />

    <TextView
        android:id="@+id/tvOperator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/etCalculator"
        android:layout_alignParentEnd="true"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textColor="#fff"
        />

    <GridLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/tvOperator"
        android:layout_alignParentBottom="true"
        android:columnCount="4"
        android:rowCount="4"
        android:useDefaultMargins="true"
        android:layout_marginTop="10dp"
        >

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@drawable/bg_button"
            android:fontFamily="@font/autour_one"
            android:onClick="onNumberClicked"
            android:text="1"
            android:textColor="#000"
            android:textSize="20sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:onClick="onNumberClicked"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="2"
            android:textSize="20sp"
            android:textColor="#000"
            android:background="@drawable/bg_button"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:onClick="onNumberClicked"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="3"
            android:textSize="20sp"
            android:textColor="#000"
            android:background="@drawable/bg_button"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/btAdd"
            android:onClick="onOperatorClicked"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="+"
            android:textSize="20sp"
            android:textColor="#000"
            android:background="@drawable/bg_button_operator"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:onClick="onNumberClicked"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="4"
            android:textSize="20sp"
            android:textColor="#000"
            android:background="@drawable/bg_button"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:onClick="onNumberClicked"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="5"
            android:textSize="20sp"
            android:textColor="#000"
            android:background="@drawable/bg_button"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt6"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:onClick="onNumberClicked"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="6"
            android:textSize="20sp"
            android:textColor="#000"
            android:background="@drawable/bg_button"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btSub"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:onClick="onOperatorClicked"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="-"
            android:textSize="20sp"
            android:textColor="#000"
            android:background="@drawable/bg_button_operator"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt7"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:onClick="onNumberClicked"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="7"
            android:textSize="20sp"
            android:textColor="#000"
            android:background="@drawable/bg_button"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt8"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:onClick="onNumberClicked"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="8"
            android:textSize="20sp"
            android:textColor="#000"
            android:background="@drawable/bg_button"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/bt9"
            android:onClick="onNumberClicked"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="9"
            android:textSize="20sp"
            android:textColor="#000"
            android:background="@drawable/bg_button"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btMul"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:onClick="onOperatorClicked"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="*"
            android:textSize="20sp"
            android:textColor="#000"
            android:background="@drawable/bg_button_operator"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btClear"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:onClick="onClearClicked"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="C"
            android:textSize="20sp"
            android:textColor="#000"
            android:background="@drawable/bg_button_clear"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt0"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:onClick="onNumberClicked"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="0"
            android:textSize="20sp"
            android:textColor="#000"
            android:background="@drawable/bg_button"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btEqual"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="="
            android:onClick="onOperatorClicked"
            android:textSize="20sp"
            android:textColor="#000"
            android:background="@drawable/bg_button_operator"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btDiv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="/"
            android:onClick="onOperatorClicked"
            android:textSize="20sp"
            android:textColor="#000"
            android:background="@drawable/bg_button_operator"
            />

    </GridLayout>


</RelativeLayout>